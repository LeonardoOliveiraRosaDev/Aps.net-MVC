@model IEnumerable<AppUser>

@{
    ViewData["Title"] = "Usuários Cadastrados";
}

@* definindo a estrutura html da view *@

<h2 class=" text-center bg-primary text-white">@ViewData["Title"]</h2>
<a asp-action="Create" class="btn btn-secondary">Criar Registro</a>

<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>E-mail</th>
            <th>Atualizar</th>
            <th>Excluir</th>
        </tr>
    </thead>
    <tbody>
            @foreach(AppUser user in Model)
            {
               <tr>
                   <td>@user.Id</td>
                   <td>@user.UserName</td>
                   <td>@user.Email</td>
                   <td>
                    <form asp-action="Update" asp-route-id="@user.Id">
                        <button type="submit" class="btn"><img src="/img/editar.png" /></button>
                    </form>
                    @* <a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@user.Id">

                <img src="/img/editar.png" />
                </a>*@
                   </td>
                   <td>
                       <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                           <button type="submit" class="btn"><img src="/img/excluir.png"/></button>
                       </form>
                   </td>
               </tr>
            }
    </tbody>
</table>
<a asp-controller="Home" asp-action="Restrita" class="btn btn-secondary">Área Restrita</a>
<a asp-controller="Account" asp-action="Logout" class="btn btn-danger">Logout</a>