@model User
@{
    ViewData["Title"] = "Criar Usuário";
}

@* definir a estrutura de html da view *@

<h2 class="text-center bg-primary text-white">@ViewData["Title"]</h2>
<a asp-action="Index" class="btn btn-secondary">Usuarios Cadastrados</a>
<div asp-validation-summary="All" class="text-danger"></div>

<form method="post" >
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input type="text" asp-for="Nome" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input  type="password" asp-for="Password" class="form-control" />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>
<br />
<a asp-controller="Home" asp-action="Restrita" class="btn btn-secondary">Área Restrita</a>
<a asp-controller="Account" asp-action="Logout" class="btn btn-danger">
    Logout
</a>

