@* Estabelecer Relacao com o model IEnumerable*@
@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

@* estrutura html para exibição dos registros*@
@* Cria um link entre index e Create*@

<a asp-action="Create">Criar Registro</a>
<h2>Relatório de Registro</h2>
<table style="width: 70%">
    <thead>
        <tr>
           <th>Nome</th>
           <th>Idade</th>
           <th>Salário</th>
           <th>Departamento</th>
           <th>Genero</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Employee regis in Model){
        <tr>
           <td>@regis.Name</td>
           <td>@regis.Age</td>
           <td>@regis.Salary</td>
           <td>@regis.Department</td>
           <td>@regis.Gen</td>
           <td>
               <a asp-action="Update" asp-route-N="@regis.Name">
                   <button type="submit">Update</button>
               </a>
           </td>
           <td>
               <form asp-action="Delete" asp-route-N="@regis.Name" method="post">
                    <button type="submit">Delete</button>
               </form>
           </td>
        </tr>
        }
    </tbody>
</table>
